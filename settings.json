{
  "window.zoomLevel": 0,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
      // For ESLint
      "source.fixAll.eslint": true,
      // For TSLint
      "source.fixAll.tslint": true,
      // For Stylelint
      "source.fixAll.stylelint": true
  },
  "diffEditor.codeLens": true,
  "editor.fontFamily": "'Cascadia Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "window.title": "${activeEditorShort}${separator}${activeFolderShort}${separator}${rootName}",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontSize": 14,
  "editor.lineHeight": 24,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "editor.fontWeight": "400",
  "prettier.eslintIntegration": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "window.titleSeparator": " -- ",
  "editor.renderWhitespace": "all",
  "vscode_custom_css.imports": ["file:////home/faysal/Documents/custom.css"],
  "vscode_custom_css.policy": true,
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "javascript"
  ],
  "editor.formatOnSaveMode": "modifications",
  "prettier.useTabs": true
}
